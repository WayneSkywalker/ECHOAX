<% include ./partials/header %>
    <title>ECHOAX - Profile</title>
</head>
<body background="https://i.imgur.com/Fg7WsNm.png" class="bg">
    <% include ./partials/navbar %>
    <div class=" container box">
        <div class="row">
            <div class="col-25">
                <center> <img src="https://i.imgur.com/TBu6Oc0.jpg" width="150px" height="150px"
                        style=" border-radius: 50%;"></center>
            </div>
            <div class="col-75">
                <h class="w">
                    <r> <%= member.username %> </r><br>
                    <n> <%= member.firstname + "  " + member.lastname %> </n><br>
                <% if(member.location){%>
                    <m><%= member.bio %></m>
                <% } %>
                </h>
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <div class="card">
                    <hd>GENDER</hd>
                    &ensp;&ensp;&ensp;<%= member.gender.toUpperCase() %>
                    <hd>BIRTHDATE</hd>
                    &ensp;&ensp;&ensp;<%= member.birthdate.toDateString() %>
                    <hd>LOCATION</hd>
                    &ensp;&ensp;&ensp;<%= member.location %>
                    <center><input type="button" name="edit" value="EDIT PROFILE" onclick="location.href='/edit';">
                    </center>
                </div>
            </div>
            <div class="col-75">
                <div class="tab">
                    <button class="tablinks active" onclick="opentab(event, 'OVERVIEW')">OVERVIEW</button>
                    <button class="tablinks" onclick="opentab(event, 'STAT')">STAT</button>
                    <% if(member.level === 'admin') { %>
                    <a href="/userrequest"><button class="w" style="float: right; background-color: yellow; border-radius: 10px;">USER'S
                            ECHO</button></a>
                    <% } %>
                    <a href="/echo"><button class="w" style="float: right; background-color: red; border-radius: 10px;">ECHO</button></a>
                </div>
                <div id="OVERVIEW" class="tabcontent" style="display: block;">
                    <h2>E-mail</h2>
                    <p><%= member.email %></p>
                </div>
            </div>
        </div>
    </div>
<% include ./partials/footer %>