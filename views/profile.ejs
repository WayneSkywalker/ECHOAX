<% include ./partials/header %>
    <title>ECHOAX - Profile</title>
</head>
<body background="https://i.imgur.com/Fg7WsNm.png" class="bg">
    <% include ./partials/navbar %>
    <div class=" container box">
        <div class="row">
            <div class="col-25">
                <center> <img src="https://i.imgur.com/TBu6Oc0.jpg" width="150px" height="150px"
                        style=" border-radius: 50%;"></center>
            </div>
            <div class="col-75">
                <h class="w">
                    <r> <%= member.username %> </r><br>
                    <n> <%= member.firstname + "  " + member.lastname %> </n><br>
                <% if(member.location){%>
                    <m><%= member.bio %></m>
                <% } %>
                </h>
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <div class="card">
                    <hd>GENDER</hd>
                    <%= member.gender %>
                    <hd>BIRTHDATE</hd>
                    <%= member.birthdate.toDateString() %>
                    <hd>LOCATION</hd>
                    <% if(member.location){ console.log(member.location); } else { console.log("-"); } %>
                    <center><input type="button" name="edit" value="EDIT PROFILE" onclick="location.href='edit';">
                    </center>
                </div>
            </div>
            <div class="col-75">
                <div class="tab">
                    <button class="tablinks active" onclick="opentab(event, 'OVERVIEW')">OVERVIEW</button>
                    <button class="tablinks" onclick="opentab(event, 'STAT')">STAT</button>
                    <a href="echo"><button class="w" style="float: right; background-color: red; border-radius: 10px;">ECHO</button></a>
                    <% if(member.status === 'admin') { %>
                        <a href="userrequest"><button class="w" style="float: right; background-color: yellow; border-radius: 10px;">USER'S ECHO</button></a>
                    <% } %>
                </div>
                <div id="OVERVIEW" class="tabcontent" style="display: block;">
                    <h2>E-mail</h2>
                    <p><%= member.email %></p>
                </div>
                <div id="STAT" class="tabcontent">
                    <h2>VOTE&ensp;&ensp;&ensp;&ensp;&ensp;<x style="color: green">YES</x>&ensp;<x style="color: red">NO</x>
                    </h2>
                    <div>Fake news&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp; <%= member.fvote_yes %>&ensp;&ensp;&ensp;<%= member.fvote_no %></div>
                    <div>Hoax&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;
                        <%= member.hvote_yes %>&ensp;&ensp;&ensp;<%= member.hvote_no %></div>
                </div>
            </div>
        </div>
    </div>
<% include ./partials/footer %>