<% include ./partials/header %>
    <title>(ADMIN) USER's ECHO</title>
</head>
<% if(news.category ==='fakenews'){ %> <body background="https://i.imgur.com/MjBOCeH.png" class="bg"> <% } else if( news.category==='hoax'){ %> <body background="https://i.imgur.com/ZnzXwZT.png" class="bg"> <% } else { %> <body background="https://i.imgur.com/2LFNL5m.png" class="bg"> <% } %>
    <% include ./partials/navbar %>
    <div class="w" style="font-size: 50px;">
        <center><%= news.author %>'S ECHO</center>
    </div>
    <div class="container" style="width: 90%">
        <div class="row">
            <div class="col-50">
                <div class="w" style="font-size: 30px;">
                    <center>PICTURE</center>
                </div>
                <center><img src="https://i.imgur.com/hHQOHIb.jpg" width="100%" style="padding-top: 50px"></center>
            </div>
            <div class="col-50" style="background-color: #2e2e2e;">
                <div class="container" style="padding:30px;">
                    <div class="row w">
                        <div class="col-30u">
                            TITLE
                        </div>
                        <div class="col-70u ">
                            <%= news.title %>
                        </div>
                    </div>
    
                    <div class="row">
                        <div class="col-30u w">
                            CATEGORY
                        </div>
                        <div class="col-70u">
                            <% if(news.category ==='fakenews'){ %> <x style="color: #b1b1ff;"> FAKE NEWS </x> <% } else if( news.category==='hoax'){ %> <x style="color: #fefe99;"> HOAX </x> <% } else { %> <x style="color: #ffa6a6;"> PHISHING </x> <% } %>
                            <x class="w">   <%= news.subCategory.toUpperCase() %></x>
                        </div>
                    </div>
                    <div class="row w">
                        <div class="col-30u w">
                            CONTENT
                        </div>
                    </div>
                    <p id="usernews" class="w">
                        <%= news.content %>
                    </p>
                    <div class="row">
                        <div class="col-30u w">
                            REFERNENCE
                        </div>
                        <div class="col-70u w">
                            <%= news.ref1 %>
                        </div>
                        <% if(news.ref2){%>
                            <div class="col-70u w">
                                <%= news.ref2 %>
                            </div>
                        <% } %>
                    </div>
                    <center style="padding-top: 10px;">
                        <form action="/postnews/<%= news.id %>" method="POST">
                            <input type="submit" class="greenbtn w" value="POST">
                            <a href="" class="redbtn w deletenews">DELETE</a>
                            <a href="/userrequest" class="yelbtn">BACK</a>
                        </form>
                    </center>
                </div>
            </div>
        </div>
    </div>
    </div>
<% include ./partials/footer %>