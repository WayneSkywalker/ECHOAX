<% include ./partials/header %>
    <title>ECHOAX - Phishing</title>
</head>
<body background="https://i.imgur.com/2LFNL5m.png" class="bg">
    <% include ./partials/navbar %>
    <div id="headca">
        <center>CATEGORY</center>
    </div>
    <div>
        <form class="search-topic" action="/phissearch" style="display: inline;">
            <input type="text" name="phissearch" placeholder="SEARCH" style="width:90%">&nbsp;<i class="fas fa-times w" id="1"></i>
        </form>
        <div id="phising" class="topic">
            <center><img id="searchbtn" src="https://i.imgur.com/P9fd36x.png"></i>PHISHING</center>
        </div>
    </div>
    
    <div class="container-fluid">
        <% for(let i = 0;i < news.length ; i++){ %>
            <% if(i%3===0){ %>
                <div class="row no-gutters">
            <% } %>
                <a href="/news/<%= news[i].id %>" class="col-33card">
                    <div class="card backphish">
                        <img src="https://i.imgur.com/TBu6Oc0.jpg" alt="headpic" style="width:100%">
                        <div class="container">
                            <div class="ntopic"><%= news[i].title %></div>
                            <div class="ndes"><%= news[i].content.substring(0,20) + " ..." %></div>
                            <div class="ndt">BY <%= news[i].author %></div>
                            <div class="ndt">POSTED ON <%= news[i].date_posted.toDateString() %></div>
                        </div>
                    </div>
                </a>
            <% if(i%3===2){ %>
                </div>
            <% } %>
        <% } %>
    </div>
<% include ./partials/footer %>